<%# 通知一覧 %>
<div class="container">
  <div class="notice h3 font-weight-bold text-muted mt-4">
    通知
  </div>
</div>

<hr>


  <% if @notices.exists? %>
    <div class="users-index">
      <%= render partial: 'public/notices/notice', collection: @notices, as: :n %>
    </div>
  <% else %>
  <div class="container">
    <h5 class="font-weight-bold text-muted text-center mt-5 ml-5">
      通知はありません
    </h5>
  </div>
  <% end %>

<%# ページ %>
<div class="container">
  <div class="col-12 offset-md-5 mb-3 mt-3">
    <%= paginate @notices %>
  </div>
</div>



