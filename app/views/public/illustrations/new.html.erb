<%# イラスト投稿画面 %>

<%# フラッシュメッセージ %>
<div class="container">
  <div class="mt-4 ml-4">
    <h6 class="text-muted font-weight-bold"><%= flash[:notice] %></h6>
  </div>
</div>


<div class="container">
  <div class="row">
    <h5 class="font-weight-bold text-muted offset-md-1 text-center mt-3 mb-4  ml-5" style="background-color:gainsboro;">
      &emsp;イラスト投稿&emsp;
    </h5>
  </div>


  <div class="row ml-5">
    <div class="col-9">

    <%= form_with model: @illustration, url:illustrations_path do |f| %>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3">イラスト</label>
          <%= f.label :image, "ファイルを選択", class: "image_input_btn btn btn-secondary" %>
          <%= f.file_field :image, class: "image_form" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3">タイトル</label>
          <%= f.text_field :title, class: "col-md-6 form-control", placeholder: "イラスト名" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3">説明文</label>
          <%= f.text_area :introduction, class: "col-md-6 form-control", placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group row">
        <%= f.submit 'イラストを投稿する', class: "btn btn-success col-md-3 offset-md-3 mt-3" %>
      </div>
    <% end %>

    </div>
  </div>
</div>