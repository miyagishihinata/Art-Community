<div class="container">
  <div class="row">
    <h5 class="font-weight-bold text-muted col-md-2 offset-md-2 text-center mt-4 mb-4" style="background-color:#bce2e8;">
      新規投稿
    </h5>
  </div>


  <div class="row">
    <div class="px-3 mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

    <%= form_with model: @illustration, url:illustrations_path do |f| %>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3">イラスト</label>
          <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3">タイトル</label>
          <%= f.text_field :title, class: "col-md-8", placeholder: "イラスト名" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-3 mb-4">説明文</label>
          <%= f.text_area :introduction, class: "col-md-8", placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group row">
        <%= f.submit '新規登録', class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
      </div>
    <% end %>

    </div>
  </div>
</div>