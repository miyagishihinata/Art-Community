<%# イラスト一覧画面 %>
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <script src="https://kit.fontawesome.com/4a01096b3c.js" crossorigin="anonymous"></script>
  </head>

  <div class="container">
    <div class="row">
      <h4 class="font-weight-bold text-muted ml-5 mt-4">
        <i class="fa-duotone fa-sparkles"></i>
        新着イラスト
      </h4>
    </div>

    <% @illustrations.each do |illustration| %>
      <%= link_to illustration_path(illustration.id) do %>
        <%= image_tag illustration.get_image(250,250), class:"ml-5 mt-3" %>
      <% end %>
    <% end %>

  </div>

  <div class="container">
    <div class="col-12 offset-md-5 mb-3 mt-3">
      <%= paginate @illustrations %>
    </div>
  </div>

</html>