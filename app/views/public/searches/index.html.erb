<%# 検索ページ %>
<div class="container">
  <div class="row">
    <h3 class="font-weight-bold text-muted mt-4 ml-5">
      検索
    </h3>
  </div>
</div>

<div class="container">

  <div class="searches-form">
    <%= form_with url: searches_path, method: :get, local: true do |f| %>
    <%= f.hidden_field :type, value: "user_name" %>
      <div class="row">
        <label class="font-weight-bold text-muted mr-5 mt-4 ml-5">ユーザー検索</label>
        <%# 入力フォーム %>
        <div class="col-5">
          <%= f.text_field :keyword, value: @keyword, placeholder: "ユーザー名を入力", class: "col-md-12 form-control ml-2 mt-3" %>
        </div>
        <%# 検索ボタン %>
        <div class="col-2">
          <%= f.submit "検索", class: "btn btn-primary col-md-5 ml-2 mt-3" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="searches-form mt-3">
    <%= form_with url: searches_path, method: :get, local: true do |f| %>
    <%= f.hidden_field :type, value: "illustration" %>
      <div class="row">
        <label class="font-weight-bold text-muted mr-5 mt-4 ml-5">イラスト検索</label>
        <%# 入力フォーム %>
        <div class="col-5">
          <%= f.text_field :keyword, value: @keyword, placeholder: "キーワードを入力", class: "col-md-12 form-control ml-2 mt-3" %>
        </div>
        <%# 検索ボタン %>
        <div class="col-2">
          <%= f.submit "検索", class: "btn btn-primary col-md-5 ml-2 mt-3" %>
        </div>
      </div>
    <% end %>
  </div>

</div>


<%# イラストの検索結果 %>
<% if @search_word.present? && params[:type] == "illustration" %>
  <div class="container">
    <h6 class="font-weight-bold text-muted mt-5 ml-5">
      <%= @illustrations.count %>件の検索結果(イラスト)
    </h6>

    <div class="illustration-list mt-4 ml-5">
      <% @illustrations.each do |illustration| %>
        <%= link_to illustration_path(illustration.id) do %>
          <%= image_tag illustration.image, class:"ml-2", width:'200px', height:'250px' %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>



<%# ユーザーの検索結果 %>

<% if @search_word.present? && params[:type] == "user_name" %>
  <div class="container">

    <h6 class="font-weight-bold text-muted mt-5 ml-5">
      <%= @users.count %>件の検索結果(ユーザー)
    </h6>

    <div class="row">
      <% @users.each do |user| %>
        <div class="col-1 offset-md-1">
          <%# ユーザーアイコン　%>
          <div class="text-center">
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_picture(80,80), class: "border border-2 mt-3" %>
            <% end %>
          </div>

          <%# ユーザー名　%>
          <%= link_to user_path(user.id) do %>
            <h5 class="text-dark text-center mb-4">
              <%= user.user_name %>
            </h5>
          <% end %>
        </div>


        <%# 自己紹介文　%>
        <div class="col-6">
          <h6 class="mt-5"><%= user.self_introduction %></h6>
        </div>

        <%# フォローボタン %>
        <div class="col-3">
          <% if current_user.following?(user) %>
            <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-dark offset-md-5 mt-4" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary offset-md-5 mt-4" %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
  <hr>
<% end %>



