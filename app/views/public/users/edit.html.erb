<div class="container">
  <div class="row">
    <h5 class="font-weight-bold text-muted offset-md-1 text-center mt-5 mb-4 ml-5" style="background-color:gainsboro;">
      &emsp;ユーザー情報編集&emsp;
    </h5>
  </div>

  <div class="row ml-4">
    <div class="col-9">

    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4">プロフィール画像</label>
          <%#= f.file_field :image, accept: "image/*", class: "hidden" %>
          <%= f.label :profile_picture, "ファイルを選択", class: "image_input_btn btn btn-secondary hidden" %>
          <%= f.file_field :profile_picture, accept: "profile_picture/*", class: "image_form hidden" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4" for="public_user_name">ユーザー名</label>
        <%= f.text_field :user_name, class: "col-md-6 form-control" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4" for="public_self_introduction">自己紹介</label>
        <%= f.text_area :self_introduction, class: "col-md-6 form-control" %>

      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4" for="email">メールアドレス</label>
        <%= f.text_field :email, class: "col-md-6 form-control" %>
      </div>


      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4" for="encrypted_password">パスワード(6文字以上)</label>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-md-6 form-control" %>
      </div>

      <div class="form-group row">
        <label class="font-weight-bold text-muted col-md-4" for="encrypted_password">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-6 form-control" %>
      </div>

      <div class="actions col-12 mb-5">
        <%# 保存ボタン %>
        <%= f.submit "編集を保存", class: "btn btn-success col-md-2 offset-md-4 mt-3" %>

        <%# マイページボタン %>
        <%= link_to 'マイページに戻る', user_path(current_user.id), class: "btn btn-primary mt-3 ml-3 col-10 col-md-3" %>
      </div>

      <div class="actions mb-5 col-12">
        <%# 退会ボタン %>
        <%= link_to '退会する', users_unsubscribe_path, class: "btn btn-danger col-12 col-md-3 offset-md-4" %>
      </div>
    <% end %>

    </div>
  </div>
</div>
