<%# ユーザー詳細画面 %>

<div class="container">
  <div class="row">

    <%# ユーザーアイコン　%>
    <div class="col-2">
      <div class="text-center">
        <%= image_tag @user.get_profile_picture(100,100), class: "border border-2 mt-4" %>
      </div>
      <h4 class="text-center"><%= @user.user_name %></h4>
    </div>

    <%# 自己紹介文　%>
    <div class="col-5">
      <h6 class="mt-5"><%= @user.self_introduction %></h6>
    </div>

    <div class="col-5">
      <% if @user == current_user %><%# 自分のみ表示 %>

        <%# 新規投稿ボタン　%>
        <%= link_to new_illustration_path do %>
          <button type="button" class="btn btn-success mr-3 offset-md-4 mt-4">
            イラスト投稿
          </button>
        <% end %>

        <%# ユーザー編集ボタン　%>
        <%= link_to edit_user_path(current_user.id) do %>
          <button type="button" class="btn btn-outline-secondary mt-4">
            ユーザー編集
          </button>
        <% end %>

      <% end %>

      <%# フォローボタン %>
      <% unless @user == current_user %><%# 自分以外に表示 %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-dark offset-md-5 mt-4" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary offset-md-5 mt-4" %>
        <% end %>
      <% end %>

    </div>

  </div>
</div>


<hr color="silver">

<div class="container">
  <div class="row">

    <%# フォロー一覧リンク %>
    <div class="offset-md-3">
      <%= link_to user_followings_path(@user) do %>
        <h5 class="font-weight-bold text-muted">フォロー</h5>
      <% end %>
    </div>

    <%# フォロワー一覧リンク %>
    <div class="offset-md-1">
      <%= link_to user_followers_path(@user) do %>
        <h5 class="font-weight-bold text-muted">フォロワー</h5>
      <% end %>
    </div>

    <%# いいね一覧リンク %>
    <div class="offset-md-1">
      <%= link_to likes_user_path(@user) do %>
        <h5 class="font-weight-bold text-muted">いいね</h5>
      <% end %>
    </div>
  </div>
</div>

<hr color="silver">

<%# 投稿一覧 %>
<div class="mb-5">
  <div class="container">
    <div class="row">
      <h5 class="font-weight-bold text-muted ml-5">投稿イラスト</h5>
    </div>

    <% @illustrations.each do |illustration| %>
      <%= link_to illustration_path(illustration.id) do %>
        <%= image_tag illustration.image, class:"ml-3 mt-3", width:'200px', height:'250px' %>
      <% end %>
    <% end %>

  </div>
</div>

<%# ページ %>
<div class="container">
  <div class="col-12 offset-md-5 mb-3 mt-3">
    <%= paginate @illustrations %>
  </div>
</div>
