<% if users.exists? %><%# フォロー、フォロワーがいる場合 %>


  <%# ユーザー一覧 %>
  <% users.each do |user| %>

    <div class="container">
      <div class="row">

        <div class="col-12 col-md-2">
          <%# ユーザーアイコン　%>
          <div class="text-center">
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.profile_picture, class: "follow_profile_picture border border-2 mt-3" %>
            <% end %>
          </div>

          <%# ユーザー名　%>
          <%= link_to user_path(user.id) do %>
            <h5 class="follow_user_name text-dark font-weight-bold text-center">
              <%= user.user_name %>
            </h5>
          <% end %>
        </div>

        <%# 自己紹介文　%>
        <div class="col-12 col-md-6">
          <div class="self_introduction h6"><%= user.self_introduction %></div>
        </div>

        <%# フォローボタン %>
        <div class="user_button col-12 col-md-3">
          <% unless user == current_user %><%# 自分以外に表示 %>
            <% if current_user.following?(user) %>
              <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "unfollow_button btn btn-dark offset-md-5 mt-4" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "follow_button btn btn-primary offset-md-5 mt-4" %>
            <% end %>
          <% end %>
        </div>

      </div>
    </div>

  <% end %><%# each %>
  <hr>

  <% else %><%# フォロー、フォロワーがいない場合 %>
  <div class="container">
    <h5 class="font-weight-bold text-muted text-center mt-5 ml-5">
      ユーザーはいません
    </h5>
  </div>

<% end %><%# if %>

<%# ページ %>
<div class="container">
  <div class="col-12 offset-md-5 mb-3 mt-3">
    <%= paginate @users %>
  </div>
</div>


