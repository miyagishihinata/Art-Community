<div class="container">
  <div class="row">

    <%# フラッシュメッセージ %>
    <div class="mt-4 ml-4">
      <h6 class="text-muted font-weight-bold"><%= flash[:notice] %></h6>
    </div>

    <div class="h5 font-weight-bold text-muted text-center mt-5 mb-4 ml-1" style="background-color:gainsboro;">
      &emsp;ログイン&emsp;
    </div>
  </div>

    <div class="row">
      <div class="px-3 ml-5 col-10 col-md-12 col-lg-8">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="email_field form-group row">
          <label class="col-md-3 font-weight-bold text-muted" for="email">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-md-6 col-11 form-control" %>
        </div>

        <div class="password_field form-group row">
          <label class="col-md-3 font-weight-bold text-muted" for="encrypted_password">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6 col-11 form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary col-md-3 col-11 offset-md-3 mt-3" %>
        </div>

      <% end %>

      </div>
    </div>


<%= render "public/shared/links" %>
</div>
