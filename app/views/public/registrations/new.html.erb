<div class="container">
  <div class="row">
    <h5 class="offset-md-1 text-center mt-4 mb-4 ml-5" style="background-color:#dcdcdc;">
      &emsp;新規登録&emsp;
    </h5>
  </div>

  <div class="row ml-4">
    <div class="col-10">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <label class="col-md-4" for="public_name">ユーザー名</label>
        <div class="form-inline">
        <%= f.text_field :user_name %>
        </div>
      </div>



      <div class="form-group row">
        <label class="col-md-4" for="email">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>


      <div class="form-group row">
        <label class="col-md-4" for="encrypted_password">パスワード(6文字以上)</label>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <label class="col-md-4" for="encrypted_password">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success col-md-2 offset-md-4 mt-3" %>
      </div>
    <% end %>

  <%= render "public/shared/links" %>
  </div>
  </div>
</div>
