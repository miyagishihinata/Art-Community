<div class="container">

  <div class="mt-4 ml-4">
    <%# フラッシュメッセージ %>
    <h5 class="font-weight-bold text-muted"><%= flash[:notice] %></h5>
  </div>

  <div class="row">
    <h4 class="font-weight-bold text-muted ml-5 mt-2">
      投稿イラスト
    </h4>
  </div>

  <div class="illustrations ml-5">
    <% @illustrations.each do |illustration| %>
      <%= link_to admin_illustration_path(illustration.id) do %>
        <%= image_tag illustration.image, class:"ml-2 mt-3", width:'200px', height:'250px' %>
      <% end %>
    <% end %>
  </div>

</div>

<div class="container">
  <div class="col-12 offset-md-5 mb-3 mt-3">
    <%= paginate @illustrations %>
  </div>
</div>