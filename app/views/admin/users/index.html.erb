<div class="row">
  <h5 class="font-weight-bold text-muted offset-md-2 text-center mt-4 mb-4" style="background-color:silver;">
    &emsp;ユーザー一覧&emsp;
  </h5>
</div>

  <div class="px-5 mx-auto col-3 col-sm-9">
    <table class="table">

      <thead style="background-color:#f5f5f5;">
        <tr>
          <th>ID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
           <%# ID %>
           <%= user.id %>
          </td>

          <td>
           <%# ユーザー %>
           <%= link_to admin_user_path(user.id) do %>
             <%= user.user_name %>
           <% end %>
          </td>

          <td>
           <%# メールアドレス %>
           <%= user.email %>
          </td>

          <td>
           <%# 退会ステータス %>
           <% if user.is_deleted == true %>
             <div class="text-danger ml-4">
               退会
             </div>
            <% else %>
              <div class="text-primary ml-4">
                有効
              </div>
           <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <hr size="10" color="whitesmoke">
  </div>

<div class="container">
  <div class="col-12 offset-md-5 mb-3">
    <%= paginate @users %>
  </div>
</div>

