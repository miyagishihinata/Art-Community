<div class="container">
  <div class="row">
    <h5 class="font-weight-bold text-muted offset-md-1 text-center mt-5 mb-4 ml-5" style="background-color:gainsboro;">
      &emsp;ユーザ一覧&emsp;
    </h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12 col-md-12">
      <table class="table">

        <thead style="background-color:#f5f5f5;">
          <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>

        <% @users.each do |user| %>
          <tr>
            <td>
             <%# ID %>
             <%= user.id %>
            </td>

            <td>
             <%# ユーザー %>
             <%= link_to admin_user_path(user.id) do %>
               <%= user.user_name %>
             <% end %>
            </td>

            <td>
             <%# メールアドレス %>
             <%= user.email %>
            </td>

            <td>
             <%# 退会ステータス %>
             <% if user.is_deleted == true %>
               <div class="text-danger ml-4">
                 退会
               </div>
              <% else %>
                <div class="text-primary ml-4">
                  有効
                </div>
             <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    <hr size="10" color="whitesmoke">
  </div>
</div>

<div class="container">
  <div class="paginate col-12 offset-md-5 mb-3">
    <%= paginate @users %>
  </div>
</div>

